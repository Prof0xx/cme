{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/services(?:/)?(.*)",
      "dest": "/api/services.ts"
    },
    {
      "src": "/api/leads(?:/)?(.*)",
      "dest": "/api/leads.ts"
    },
    {
      "src": "/api/referral/(.*)",
      "dest": "/api/referral.ts?path=$1"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "/api/admin.ts?path=$1"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth/$1.ts"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/branding/(.*)",
      "dest": "/branding/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/service-examples/(.*)",
      "dest": "/service-examples/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/((?!api/.*).*)",
      "dest": "/index.html",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.x"
    }
  }
}