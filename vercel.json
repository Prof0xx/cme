{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "dist/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/services(?:/)?(.*)", "dest": "/api/services.ts" },
    { "src": "/api/leads(?:/)?(.*)", "dest": "/api/leads.ts" },
    { "src": "/api/referral(?:/)?(.*)", "dest": "/api/referral.ts" },
    { "src": "/api/admin(?:/)?(.*)", "dest": "/api/admin.ts" },
    { "src": "/api/auth(?:/)?(.*)", "dest": "/api/auth.ts" },
    { "src": "/api/service-requests(?:/)?(.*)", "dest": "/api/service-requests.ts" },

    { "handle": "filesystem" },

    {
      "src": "/((?!api/.*).*)",
      "dest": "/index.html",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.x"
    }
  }
}
